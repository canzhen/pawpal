/**index.wxss**/

.container {
    padding: 20rpx;
    background: #f7f7f7;
  }
  
  /* Search Box */
  .search-box {
    position: relative;
    padding: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
  }
  
  .search-box icon {
    margin-right: 10rpx;
    color: #999;
  }
  
  .search-box input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  /* Service Grid */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20rpx;
    padding: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
  }
  
  .service-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .service-item image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
  }
  
  .service-item text {
    font-size: 24rpx;
    color: #333;
  }
  
  /* Sitter List */
  .sitter-list {
    margin-top: 20rpx;
  }
  
  .sitter-card {
    background: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    position: relative;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  }
  
  .sitter-card .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin-right: 20rpx;
  }
  
  .sitter-card .info {
    flex: 1;
  }
  
  .sitter-card .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .sitter-card .name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .sitter-card .price {
    color: #ff6b6b;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .sitter-card .rating {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .sitter-card .stars {
    color: #ffd700;
    font-size: 24rpx;
    margin-right: 10rpx;
  }
  
  .sitter-card .reviews {
    color: #999;
    font-size: 24rpx;
  }
  
  .sitter-card .location {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .sitter-card .description {
    font-size: 26rpx;
    color: #666;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  
  /* Loading State */
  .loading {
    text-align: center;
    padding: 20rpx;
    color: #999;
    font-size: 24rpx;
  }
  
  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 40rpx;
    color: #999;
  }
  
  .empty-state image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
  }
  
  .empty-state text {
    font-size: 28rpx;
  }