.container {
    min-height: 100vh;
    background: #f7f7f7;
   }
   
   /* 用户信息头部 */
   .user-header {
    background: #ffffff;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
   }
   
   .user-info {
    display: flex;
    align-items: center;
   }
   
   .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin-right: 30rpx;
   }
   
   .info {
    flex: 1;
   }
   
   .nickname {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
   }
   
   .user-type {
    font-size: 26rpx;
    color: #666;
    background: #f0f0f0;
    padding: 4rpx 16rpx;
    border-radius: 20rpx;
   }
   
   /* 菜单列表 */
   .menu-section {
    background: #ffffff;
    margin-bottom: 20rpx;
   }
   
   .section-title {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: #999;
    border-bottom: 1rpx solid #f5f5f5;
   }
   
   .menu-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #f5f5f5;
   }
   
   .menu-item .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
   }
   
   .menu-item text {
    flex: 1;
    font-size: 30rpx;
    color: #333;
   }
   
   .menu-item .right {
    display: flex;
    align-items: center;
   }
   
   .menu-item .balance {
    font-size: 30rpx;
    color: #ff4d4f;
    margin-right: 10rpx;
   }
   
   .menu-item .arrow {
    width: 32rpx;
    height: 32rpx;
   }
   
   /* 底部按钮 */
   .bottom-button {
    padding: 40rpx 30rpx;
   }
   
   .become-sitter {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #1296db;
    color: #fff;
    font-size: 32rpx;
    border-radius: 44rpx;
    border: none;
   }
   
   /* 客服按钮 */
   .customer-service {
    position: fixed;
    right: 30rpx;
    bottom: 100rpx;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 40rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
    border: none;
    font-size: 28rpx;
   }
   
   .customer-service image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
   }
   
   /* 按钮点击效果 */
   .menu-item:active {
    background: #f5f5f5;
   }
   
   .become-sitter:active {
    opacity: 0.8;
   }